<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScanner"
    android:orientation="vertical"
    android:background="@drawable/background">


    <TextView
        android:id="@+id/scannerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCANNER"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/mainScannerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawableLeft="@drawable/ic_baseline_document_scanner_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/ic_launcher_background"
        android:text="SCANNER"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:padding="10dp"
        android:paddingLeft="30dp"
        />

    <TextView
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOTE: \n          If entered count wrongly, scan again and enter negative number count to balance it"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="17dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/billAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BILL AMOUNT: "
        android:layout_marginTop="75dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:background="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="0.00"
        android:textSize="70dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:clickable="false"
        />

</LinearLayout>